<script>
  App.cable.subscriptions.create({
    channel: "TweetChannel",
    source: "<%= params[:source] %>"
  }, {
    received: function(data) {
      return this.appendTweet(data);
    },
    appendTweet: function(data) {
      var html;
      html = this.createTweet(data);
      return $("#tweets").append(html);
    },
    createTweet: function(data) {
      return `<div>
        <span>${data['text']}</span>
        <hr>
      </div`;
    }
  })
</script>
<h3>Live Tweets of: <%= params[:source] %></h3>
<div id="tweets"></div>